@model MasterViewModel

@{
    ViewData["Title"] = "Currency Rate History Page";
}

@if (TempData["warning"] != null)
{
    <div class="alert alert-danger">@TempData["warning"]</div>
}
@if (TempData["info"] != null)
{
    <div class="alert alert-success">@TempData["info"]</div>
}

<h1 class="sign-in">G-ang Currency Converter <a asp-action="Index" class="btn btn-sm btn-secondary">Back to Home</a></h1>
<a asp-action="AddCurrencyRate" asp-route-countryId="@Model.CountryId" class="btn btn-sm btn-primary">Add Currency Rate</a>
<div class="login-wrap">
    <div class="sign-in-htm">
        <table class="table table-sm table-striped table-bordered m-2">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Rate</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model.CurrencyRateList)
                {
                    <tr>
                        <td>@c.CurrencyDate</td>
                        <td>@c.Rate</td>
                        <td>
                            <a asp-action="UpdateCurrencyRate" asp-route-countryId="@Model.CountryId" asp-route-rateId="@c.CurrencyRateId">
                                <img src="/icon/edit.png" />
                                <p>Update</p>
                            </a>
                            <a asp-action="DeleteCurrencyRate" asp-route-countryId="@Model.CountryId" asp-route-rateId="@c.CurrencyRateId">
                                <img src="/icon/close.png" />
                                <p>Delete</p>
                            </a>
                        </td>
                        <td></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

